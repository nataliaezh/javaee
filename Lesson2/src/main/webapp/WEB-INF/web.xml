<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


  <display-name>Archetype Created Web Application</display-name>
  <welcome-file-list>
    <welcome-file>main.html</welcome-file>
  </welcome-file-list>

  <servlet>
    <servlet-name>XMLBasedServlet</servlet-name>
    <servlet-class>ru.geekbrains.XMLBasedServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>XMLBasedServlet</servlet-name>
    <url-pattern>helloxml</url-pattern>
  </servlet-mapping>

  <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/error404.html</location>
  </error-page>

  <error-page>
    <error-code>403</error-code>
    <location>/WEB-INF/error403.html</location>
  </error-page>

</web-app>